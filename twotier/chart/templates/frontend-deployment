apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend
  namespace: twotier
spec:
  replicas: 1
  selector:
    matchLabels:
      app: frontend
  template:
    metadata:
      labels:
        app: frontend
    spec:
      containers:
      - name: frontend
        image: "{{ .Values.image.repository }}/frontend:{{ .Values.image.frontend_tag }}"
        ports:
        - containerPort: 80
        envFrom:
        - configMapRef:
            name: twotier-config
        - secretRef:
            name: frontend-secrets